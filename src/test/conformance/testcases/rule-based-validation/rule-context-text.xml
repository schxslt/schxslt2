<?xml version="1.0" encoding="UTF-8"?>
<testcase expect="invalid" xmlns="https://doi.org/10.5281/zenodo.5679629#">
  <testcase:label xmlns:testcase="https://doi.org/10.5281/zenodo.5679629#">Context selector matches a text node</testcase:label>
  <schemas>
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:rule context="text()">
          <sch:report test=". = 'text node'"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
  <documents>
    <document filename="document.xml">
      <root>text node</root>
    </document>
  </documents>
</testcase>