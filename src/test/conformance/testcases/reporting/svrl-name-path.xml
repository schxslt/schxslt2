<?xml version="1.0" encoding="UTF-8"?>
<testcase expect="invalid" xmlns="https://doi.org/10.5281/zenodo.5679629#">
  <testcase:label xmlns:testcase="https://doi.org/10.5281/zenodo.5679629#">The sch:name element expands into the value of evaluating the expression in @path</testcase:label>
  <schemas>
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:rule context="/element">
          <sch:report test="true()">
            <sch:name path="@attribute"/>
          </sch:report>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
  <documents>
    <document filename="document.xml">
      <element attribute="value" xmlns=""/>
    </document>
  </documents>
  <assertions xmlns:svrl="http://purl.oclc.org/dsdl/svrl">
    <assertion assert="normalize-space(//svrl:successful-report) = 'value'"/>
  </assertions>
</testcase>