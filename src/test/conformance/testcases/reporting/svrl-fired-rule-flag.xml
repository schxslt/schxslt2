<?xml version="1.0" encoding="UTF-8"?>
<testcase expect="invalid" xmlns="https://doi.org/10.5281/zenodo.5679629#">
  <testcase:label xmlns:testcase="https://doi.org/10.5281/zenodo.5679629#">The svrl:fired-rule/@flag attribute contains the flag of the rule</testcase:label>
  <schemas>
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:rule context="/" flag="flag">
          <sch:report test="true()"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
  <documents>
    <document filename="document.xml">
      <document xmlns=""/>
    </document>
  </documents>
  <assertions xmlns:svrl="http://purl.oclc.org/dsdl/svrl">
    <assertion assert="//svrl:fired-rule/@flag = 'flag'"/>
  </assertions>
</testcase>